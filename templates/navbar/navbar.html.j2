{# mobile header #}
<div>
    <header class="mobile-header bg-white static-top">
        <div class="container d-flex">
            <div class="brand split-brand">
                <img src="https://static.vseth.ethz.ch/assets/vseth-0100-verband/signet.svg" height="30">
                <div class="split"></div>
            </div>
        </div>
    </header>
</div>
{# primary Navbar #}
<nav class="navbar navbar-expand-lg navbar-dark navbar-global bg-primary static-top">
    <div class="container">
        <a class="navbar-brand white-brand">
            <img src="https://static.vseth.ethz.ch/assets/vseth-0100-verband/logo-mono.svg" height="30">
        </a>
    <div class="collapse navbar-collapse" id="navbarDisappear">
        <ul class="navbar-nav ml-auto">
        {% for topLevel in primaryNavBarData.externalNav %}
            <li class="nav-item dropdown">
                {% if topLevel.title.de%}
                    <a class="dropdown-toggle nav-link" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false" id="navbarDropdown">{{ topLevel.title.de }}</a>
                {% else %}
                    <a class="dropdown-toggle nav-link" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false" id="navbarDropdown">{{ topLevel.title}}</a>
                {% endif %}
                    <ul class="dropdown-menu  dropdown-menu-right" aria-labelledby="navbarDropdown" aria-hidden="true">
                        {% for childLevel in topLevel.childItems %}
                            {% if childLevel.title.de %}
                                {% if active_language == 'de' %}
                                    <a class="dropdown-item" href="{{ childLevel.href }}" tabindex="0" role="menuitem">{{ childLevel.title.de }}</a>
                                {% else %}
                                    <a class="dropdown-item" href="{{ childLevel.href }}" tabindex="0" role="menuitem">{{ childLevel.title.en }}</a>
                                {% endif %}
                            {% else %}
                                <a class="dropdown-item" href="{{ childLevel.href }}" tabindex="0" role="menuitem">{{ childLevel.title }}</a>
                            {% endif %}
                        {% endfor %}
                    </ul>
                </li>
            {% endfor %}
        </ul>
    </div>
  </div>
</nav>
